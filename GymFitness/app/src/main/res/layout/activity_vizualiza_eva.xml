<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.gymfitness.vizualizaEva">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorAccent"
                    android:id="@+id/imagec"
                    android:layout_margin="10dp" android:src="@drawable/addpic"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">
                <TextView
                        android:text="@string/fecha"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:fontFamily="@font/roboto"
                        android:layout_weight="1"/>
                <EditText
                        android:focusable="false"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"

                        android:ems="10"
                        android:id="@+id/editText4" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">
                <TextView
                        android:text="@string/peso"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:fontFamily="@font/roboto"
                        android:id="@+id/textView11" android:layout_weight="1"/>
                <EditText
                        android:focusable="false"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"

                        android:ems="10"
                        android:id="@+id/editText2" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">
                <TextView
                        android:text="@string/estatura"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:fontFamily="@font/roboto"
                        android:id="@+id/textView12" android:layout_weight="1"/>
                <EditText
                        android:focusable="false"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"

                        android:ems="10"
                        android:id="@+id/editText3" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">
                <TextView
                        android:text="@string/medidacintura"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:fontFamily="@font/roboto"
                        android:id="@+id/textView13" android:layout_weight="1"/>
                <EditText
                        android:focusable="false"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"

                        android:ems="10"
                        android:id="@+id/editText5" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">
                <TextView
                        android:text="@string/imc"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:fontFamily="@font/roboto"
                        android:id="@+id/textView14" android:layout_weight="1"/>
                <EditText
                        android:focusable="false"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"

                        android:ems="10"
                        android:id="@+id/editText6" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">
                <TextView
                        android:text="@string/indice"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:fontFamily="@font/roboto"
                        android:id="@+id/textView15" android:layout_weight="1"/>
                <EditText
                        android:focusable="false"
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"

                        android:ems="10"
                        android:id="@+id/editText7" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp" android:layout_weight="1">
                <TextView
                        android:text="@string/grasa"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primaryText"
                        android:fontFamily="@font/roboto"
                        android:id="@+id/textView16" android:layout_weight="1"/>
                <EditText
                        android:focusable="false"
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"

                        android:ems="10"
                        android:id="@+id/editText8" android:layout_weight="1"/>
            </LinearLayout>
            <Button
                    android:text="@string/aceptar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:background="@color/colorPrimary" android:textColor="@color/textIcons"
                    android:fontFamily="@font/roboto"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" app:layout_constraintVertical_bias="0.0"
            />
            1
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
